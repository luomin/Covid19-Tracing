{
    "name":"vehiclesharing-network",
    "description":"This is a common connection profile. @see https://fabric-sdk-node.github.io/master/tutorial-network-config.html",
    "version":"1.0",
    "channels":{
        "vschannel":{
            "orderers":[
                "orderer.bctest.example.com"
            ],
            "peers":{
                "peer0.sharing.example.com":{
                    "endorsingPeer":true,
                    "chaincodeQuery":true,
                    "ledgerQuery":true,
                    "eventSource":true
                },
                "peer0.vehicle.example.com":{
                    "endorsingPeer":true,
                    "chaincodeQuery":true,
                    "ledgerQuery":true,
                    "eventSource":true
                },
                "peer0.onlinepay.example.com":{
                    "endorsingPeer":true,
                    "chaincodeQuery":true,
                    "ledgerQuery":true,
                    "eventSource":true
                }
            },
            "chaincodes":[
                "vehiclesharing:1.1"
            ]
        }
    },
    "organizations":{
        "SharingOrg":{
            "mspid":"SharingMSP",
            "peers":[
                "peer0.sharing.example.com"
            ]
        },        
        "VehicleOrg":{
            "mspid":"VehicleMSP",
            "peers":[
                "peer0.vehicle.example.com"
            ]
        },

        "OnlinePayOrg":{
            "mspid":"OnlinePayMSP",
            "peers":[
                "peer0.onlinepay.example.com"
            ]
        }
    },
    "orderers":{
        "orderer.bctest.example.com":{
            "url":"grpcs://orderer.bctest.example.com:7050",
            "grpcOptions":{
                "ssl-target-name-override":"orderer.bctest.example.com"
            },
            "tlsCACerts":{
                "path":"../deployed/client/mymsp/orgmsp/orderer.bctest.example.com/msp/tlscacerts/tlsca.bctest.example.com.pem"
            }
        }
    },
    "peers":{
        "peer0.sharing.example.com":{
            "url":"grpcs://peer0.sharing.example.com:7051",
            "grpcOptions":{
                "ssl-target-name-override":"peer0.sharing.example.com"
            },
            "tlsCACerts":{
                "path":"../deployed/client/mymsp/orgmsp/peer0.sharing.example.com/msp/tlscacerts/tlsca.sharing.example.com.pem"
            }
        },
        "peer0.vehicle.example.com":{
            "url":"grpcs://peer0.vehicle.example.com:7051",
            "grpcOptions":{
                "ssl-target-name-override":"peer0.vehicle.example.com"
            },
            "tlsCACerts":{
                "path":"../deployed/client/mymsp/orgmsp/peer0.vehicle.example.com/msp/tlscacerts/tlsca.vehicle.example.com.pem"
            }
        },
        "peer0.onlinepay.example.com":{
            "url":"grpcs://peer0.onlinepay.example.com:7051",
            "grpcOptions":{
                "ssl-target-name-override":"peer0.onlinepay.example.com"
            },
            "tlsCACerts":{
                "path":"../deployed/client/mymsp/orgmsp/peer0.onlinepay.example.com/msp/tlscacerts/tlsca.onlinepay.example.com.pem"
            }
        }
    }
}
